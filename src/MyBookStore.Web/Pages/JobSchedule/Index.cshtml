@page
@using Microsoft.AspNetCore.Authorization
@using Microsoft.Extensions.Localization
@using MyBookStore.Localization
@using MyBookStore.Permissions
@model MyBookStore.Web.Pages.Books.IndexModel
@inject IStringLocalizer<MyBookStoreResource> L
@inject IAuthorizationService AuthorizationService

@section scripts{
    <abp-script src="/Pages/JobSchedule/index.js"/>
}

<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <h2>@L["JobSchedule:JobInfo"]</h2>
            </abp-column>
            <abp-column size-md="_6" class="text-right">
                <abp-button id="NewJobInfoButton"
                            text="@L["NewJobInfo"].Value"
                            icon="plus"
                            button-type="Primary">
                </abp-button>
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" id="JobInfoTable">
        </abp-table>
    </abp-card-body>
</abp-card>